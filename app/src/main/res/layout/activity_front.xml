<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/marble_image" />

    <ImageView
        android:id="@+id/ivRectangle"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/wrectangle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="DYS"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="95sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/baloo_chettan"
        android:text="Login"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="598dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/op_round_button"
        android:fontFamily="@font/baloo_chettan"
        android:text="Register"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="598dp" />

</RelativeLayout>